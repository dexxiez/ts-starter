{
  "name": "ts-starter",
  "version": "1.0.0",
  "description": "Template for typescript projects",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsup src/index.ts --format cjs --dts --minify --clean --sourcemap --legacy-output",
    "dev": "concurrently \"tsup src/index.ts --watch --format esm \" \"nodemon index.js\""
  },
  "keywords": [],
  "author": "Dexxiez",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^20.5.7",
    "concurrently": "^8.2.0",
    "nodemon": "^3.0.1",
    "tsup": "^7.2.0",
    "typescript": "^5.1.6"
  }
}
